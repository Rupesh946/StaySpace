# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGO_URI=mongodb://localhost:27017/stayspace

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM_NAME=StaySpace
SMTP_FROM_EMAIL=noreply@stayspace.com

# Stripe Payment Configuration
# Get your keys from: https://dashboard.stripe.com/apikeys
# For testing, use test keys (starts with sk_test_ and pk_test_)
# For production, use live keys (starts with sk_live_ and pk_live_)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Stripe Webhook Secret
# Get this from: https://dashboard.stripe.com/webhooks
# After creating a webhook endpoint pointing to: https://yourdomain.com/api/payments/webhook
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Payment Currency (ISO 4217 currency code)
# inr = Indian Rupee, usd = US Dollar, eur = Euro, gbp = British Pound
PAYMENT_CURRENCY=inr

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
